# DevOps PR Auto-Orchestrator Configuration

# Application Environment
APP_ENV=dev
PORT=8000
LOG_LEVEL=INFO

# GitHub App Configuration (Required for production)
# GITHUB_APP_ID=your_app_id
# GITHUB_PRIVATE_KEY_BASE64=your_base64_encoded_private_key
# GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=app
DB_PASSWORD=app_pw
DB_NAME=pr_orchestrator

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# LLM Configuration (Optional)
# OPENAI_API_KEY=your_openai_api_key
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2

# Processing Configuration
ENABLE_TREESITTER=false
MAX_PATCH_BYTES=400000
MAX_SUGGESTIONS_PER_FUNCTION=3

# Risk Scoring Configuration
ADDITIONS_THRESHOLD=1000

# High-risk dependencies (comma-separated)
HIGH_RISK_DEPENDENCIES=cryptography,pyjwt,requests,urllib3,flask,django